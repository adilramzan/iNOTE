<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".application.iNOTE"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hush_note_logo"
        android:label="iNOTE"
        android:roundIcon="@drawable/hush_note_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.iNOTE"
        tools:targetApi="35">

        <activity
            android:name=".presentation.activity.AddNoteActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.NoteEditorActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.iNOTE" />
        <activity
            android:name=".presentation.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.iNOTE" />
        <activity
            android:name=".presentation.activity.HomeActivity"
            android:exported="false"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.iNOTE" />
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HushNote.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>